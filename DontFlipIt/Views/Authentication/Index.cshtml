<!--Login form-->
<section class="login_form">
    <div class="container form-container">
                <h6 class="login_page_title">Hotelname</h6>
                <form method="post" novalidate>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>
                </form>
                <h6 class="forgot_password"><a href="@Url.Action("ForgotPassword","Authentication")">Forgot Password?</a></h6>
                <h6 class="signup_here">Want to book a room? sign up <a href="@Url.Action("Register","Authentication")">here</a></h6>
                <button class="btn-primary btn">Login</button>
                <div class="social_media">
                    <h6>Or Sign Up Using</h6>
                    <button class="primary-btn fb">
                        <i class="fa-brands fa-facebook-f"></i>
                    </button>
                    <button class="primary-btn x">
                        <i class="fa-brands fa-x-twitter"></i>
                    </button>
                    <button class="primary-btn google">
                        <i class="fa-brands fa-google"></i>
                    </button>
                </div>
            </div>

</section>