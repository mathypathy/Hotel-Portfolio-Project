<section class="forgot_password_section">
    <div class="container form-container">
        <h1>Reset Password</h1>
        <p>Enter email and we will send you a link to reset your password.</p>
        <form>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div> 
        </form>
        <button class="btn-primary btn">Send</button>
        <h5><a href="@Url.Action("Index","Authentication")"><i class="fa-solid fa-arrow-left-long"></i></a></h5>
    </div>
</section>